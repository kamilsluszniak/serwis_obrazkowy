<header class="navbar navbar-fixed-top navbar-inverse main-navbar-header">
  <div class="container">
    <div class="row">

        <%= link_to "filmy i obrazki", root_path, id: "logo" %>

        <div class="hamburger-div">
          <button type="button" class="navbar-toggle collapsed hamburger" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
      <div class="main-navbar">
        <ul class="nav navbar-nav inline-block">
          <li><%= link_to "Losowe", root_path(:random => 1) %></li>
          <li><%= link_to "Dodaj", new_post_path %></li>
        </ul>
        <div class="btn-group">
          <button type="button" class="profile-button dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          </button>
          <div class="dropdown-menu profile-dropdown">
            <% if logged_in? %>
              <%= link_to "Użytkownicy", users_path %>
              <div class="dropdown-divider"></div>
              <%= link_to "Wyloguj się", logout_path, method: "delete" %>
            <% else %>
              <%= link_to "Zaloguj się", login_path %>
              <%= link_to "Utwórz konto", signup_path %>
            <% end %>
          </div>
        </div>
      </div>  
      <div class="collapse navbar-collapse hamburger" id="bs-example-navbar-collapse-1">
        <ul class="side-menu">
          <li><%= link_to "Losowe", root_path(:random => 1) %></li>
          <li><%= link_to "Dodaj", new_post_path %></li>
          <% if logged_in? %>
            <li><%= link_to "Użytkownicy", users_path %></li>
            <li><%= link_to "Profil", current_user%></li>
            <li><%= link_to "Wyloguj się", logout_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to "Zaloguj się", login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>