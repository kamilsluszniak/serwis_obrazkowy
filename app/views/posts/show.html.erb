<% provide(:title, @post.user.name) %>
<div class="row">
<div class="col-md-8 col-md-offset-2">
<div class="post-container">
    <div class="post_info">
      <h1 class="text-left"><%= @post.title %></h1>
      <img class="user_avatar"><%= gravatar_for @post.user, size: 30 %></img>
      <p><%= @post.user.name %> @ <%= @post.created_at%></p>
    </div>
    
    <div class="content">
      <p><%= @post.content %></p>
      <%= (image_tag @post.attachment_url, :class => "post_image") %>
    </div>
    <% if current_user %>
          <% if ((@post.user == current_user) && (@post.created_at > 5.minutes.ago)) || current_user.admin? %>
           <div class="post-options">
             <ul class="nav navbar-nav navbar-right">
               <li><%= link_to "Edytuj", edit_post_path(@post.id) %></li>
               <li><%= link_to "Usuń", @post, method: :delete,
                                  data: { confirm: "Na pewno usunąć ten post?" } %></li>
             </ul>
           </div>
           <% end %>  
       <% end %>
</div>
</div>
</div>
<div class="grid">
    <div class="row">
        <% if logged_in? %>
        <div class="col-md-4 col-md-offset-3">
            <div class="comment-form">
              <%= form_for(@comment, :remote => true, :id => "comment-form") do |f| %>
                  <div class="field">
                    <%= f.text_area :content, placeholder: "Treść komentarza...", :id => "comment-field" %>
                    <%= hidden_field_tag :post_id, @post.id %>
                  </div>
                  <%= f.submit "Dodaj komentarz", class: "btn btn-primary", :id => "submit-comment-btn" %>
              <% end %>
            </div>
        </div>
        <% end %>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="comments-list-container">
                <% if @comments.any? %>
                    <ul class="comments">
                        <%= render @comments %>
                    </ul>
                    <%= will_paginate @comments%>
                <% end %>
            </div>
        </div>
    </div>
</div>
