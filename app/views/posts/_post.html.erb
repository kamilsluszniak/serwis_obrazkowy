<li>
<div class="row margin-15px-fixed">
    <div class="col-md-8 col-md-offset-2">
        <div class="post-container">
            <div class="post_info">
                <h1 class="text-left"><%= post.title %></h1>
                <img class="user_avatar"><%= avatar_for post.user %></img>
                <p><%= post.user.name %>, dodany <%= time_ago_in_words(post.created_at) %> temu.</p>
            </div>
            <div class="content" id="post<%= post.id %>">
                <p><%= post.content %></p>
                <% if post.attachment_url.present? %>
                    <%= (link_to image_tag(post.attachment_url), post, :class => "post_image") %>
                <% elsif post.video_link.present? %>
                    <div class="embed-responsive embed-responsive-16by9">
                        <div class="embed-responsive-item" id="player<%=post.id%>">
                            
                        </div>
                    </div>
                <% end %>
                <% if current_user %>
                    <% if ((post.user == current_user) && (post.created_at > 5.minutes.ago)) || current_user.admin? %>
                    <div class="post-options">
                        <ul class="nav navbar-nav navbar-right">
                            <li><%= link_to "Edytuj", edit_post_path(post.id) %></li>
                            <li><%= link_to "Usuń", post, method: :delete,
                                data: { confirm: "Na pewno usunąć ten post?" } %></li>
                        </ul>
                    </div>
                    <% end %>  
                <% end %>
            <div class="rating btn-group inline pull-right">
                <% if current_user %>
                    <%= button_to "+" + post.rating.to_s, rate_post_path(:id=> post.id, :rate=> 1), class: 'btn btn-success rate-btn', method: :post, remote: true %>
                <% end %>
                <% if current_user.facebook_user.present? %>
                    <div class="fb-like" data-href="http://poligon-kamil-sluszniak.c9users.io:8080/posts/<%= post.id %>" data-width="50" data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="true">
                    </div>
                <% end %>
            </div>
            <% if current_user.facebook_user.present? %>
                <div class="row">
                    <div class="comments-button-toggle">
                        <span id="show-comments-btn<%= post.id %>">Komentarze</span>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="fb-comments" id="post<%= post.id %>comments" style="display:none;">
                        <div class="fb-comments" data-href="http://poligon-kamil-sluszniak.c9users.io:8080/posts/<%= post.id %>" data-width="150" data-numposts="8">
                        </div>
                        <script type="text/javascript">
                            <%= render "toggle_comments.js.erb", post: post %>
                        </script>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
</li>