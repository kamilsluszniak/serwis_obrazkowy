<%= form_for(@post) do |f| %>
  <%= render 'shared/post_error_messages' %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  
  <%= f.label :attachment %>
  <%= f.file_field :attachment %>

  <%= f.submit "Submit new post", class: "btn btn-primary" %>
<% end %>